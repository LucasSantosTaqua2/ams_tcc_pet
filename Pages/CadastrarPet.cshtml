@page
@model CadastrarPetModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <h4>CADASTRAR PET</h4>
</div>
<br>
<form action="" method="post" id="form-cad" class="form-control row g-3">
    <div class="row g-3">
        <div class="col-md-6">
            <label for="">Nome do Pet:</label>
            <input type="text" name="nomePet" id="" class="form-control" required placeholder="Digite o nome do pet">
        </div>
        <div class="col-md-6">
            <label for="">Raça: </label>
            <select name="racaPet" id="" class="form-control" required>
                <option value="" selected>Selecione a raça do animal</option>
                <option value="1">Cachorro</option>
                <option value="2">Gato</option>
            </select>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-6">
            <label for="">Porte: </label>
            <select name="portePet" id="" class="form-control" required>
                <option value="">Selecione o porte do pet</option>
                <option value="1">Pequeno</option>
                <option value="2">Médio</option>
                <option value="3">Grande</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="">Cor: </label>
            <input type="text" name="corPet" id="" class="form-control" required placeholder="Digite a cor do pet">
        </div>
    </div>
    <br>
    <div class="row">
        <label for="">Descrição (opcional): </label>
        <input type="text" name="descPet" id="" class="form-control" placeholder="Descreva o pet aqui (opcional)">
    </div>
    <br>
    <div class="row">
        <label for="">Endereço:</label>
        <input type="text" class="form-control" name="endPet" id="" placeholder="Digite o endereço do pet">
    </div>
    <br>
    <div class="row">
        <div class="col-md-6">
            <label for="">Cidade:</label>
            <input type="text" class="form-control" name="cidadePet" id="" placeholder="Digite a cidade">
        </div>
        <div class="col-md-6">
            <label for="">Estado:</label>
            <input type="text" class="form-control" name="estadoPet" id="" placeholder="Digite o estado">
        </div>
    </div>
    <br>
    <div class="row">
            <label for="">Envie fotos do pet:</label>
            <input type="file" class="form-control" id="fotoPet">
    </div>
    <br><br>
    <input type="submit" value="Cadastrar" class="form-control" id="btnCad">
</form>

<style>
    #btnCad {
        background-color: rgba(38, 143, 56, 0.208);
    }

    #form-cad {
        background-color: rgb(250, 250, 216);
    }
</style>